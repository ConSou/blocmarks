<h1>
  <%= @bookmark.url %>
  <% if current_user %>
    <%= render partial: 'likes/like', locals: {bookmark: @bookmark} %>
  <% end %>
</h1>
<% if current_user == @bookmark.user %>
  <p>
    <%= link_to "Edit", edit_topic_bookmark_path %> |
    <%= link_to "Delete", [@bookmark.topic, @bookmark], method: :delete, data: {confirm: "Are you sure you want to delete bookmark"} %>
  </p>
<% end %>
